{
  "kind": "collectionType",
  "collectionName": "team_members",
  "info": {
    "singularName": "team-member",
    "pluralName": "team-members",
    "displayName": "Team Member",
    "description": "Foundation team members"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": { "localized": false }
      }
    },
    "role": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "bio": {
      "type": "text",
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": { "localized": false }
      }
    },
    "department": {
      "type": "enumeration",
      "enum": ["direction", "education", "arts", "administration", "volunteers"],
      "pluginOptions": {
        "i18n": { "localized": false }
      }
    },
    "order": {
      "type": "integer",
      "default": 0,
      "pluginOptions": {
        "i18n": { "localized": false }
      }
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    }
  }
}
