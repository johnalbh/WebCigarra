{
  "kind": "singleType",
  "collectionName": "about_pages",
  "info": {
    "singularName": "about-page",
    "pluralName": "about-pages",
    "displayName": "About Page",
    "description": "About us page content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "mission": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "vision": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "history": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "timeline": {
      "type": "component",
      "repeatable": true,
      "component": "sections.timeline-item",
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "foundedYear": {
      "type": "integer",
      "pluginOptions": {
        "i18n": { "localized": false }
      }
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": { "localized": false }
      }
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    }
  }
}
