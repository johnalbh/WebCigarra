{
  "kind": "collectionType",
  "collectionName": "success_stories",
  "info": {
    "singularName": "success-story",
    "pluralName": "success-stories",
    "displayName": "Success Story",
    "description": "Alumni success stories"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": { "localized": false }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "currentRole": {
      "type": "string",
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "quote": {
      "type": "text",
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "fullStory": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": { "localized": false }
      }
    },
    "achievement": {
      "type": "string",
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "pluginOptions": {
        "i18n": { "localized": false }
      }
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "pluginOptions": {
        "i18n": { "localized": true }
      }
    }
  }
}
